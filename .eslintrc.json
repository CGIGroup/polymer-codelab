{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "off",
    "require-jsdoc": "off",
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["error", "unix"]
    //"linebreak-style": 0
  },
  "globals": {
    "Polymer": true
  }
}
